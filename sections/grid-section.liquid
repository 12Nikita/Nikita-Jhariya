  <script>
    // Product data fetched server-side and passed to client
    const products = {};
    {% for product in collections[section.settings.collection].products limit: 6 %}
      products['{{ product.handle }}'] = {
        id: '{{ product.id }}',
        title: '{{ product.title | escape }}',
        price: '{{ product.price | money }}',
        description: '{{ product.description | strip_html | escape }}',
        image: '{{ product.featured_image | img_url: 'medium' | default: 'https://via.placeholder.com/120x140' }}',
        variants: [
          {% for variant in product.variants %}
            {
              id: '{{ variant.id }}',
              title: '{{ variant.title | escape }}',
              size: '{{ variant.option1 | escape }}',
              color: '{{ variant.option2 | escape }}'
            }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      };
    {% endfor %}

    // Explicitly include Soft Winter Jacket (handle: dark-winter-jacket)
    {% assign extra_jacket = all_products['dark-winter-jacket'] %}
    {% if extra_jacket %}
      products['{{ extra_jacket.handle }}'] = {
        id: '{{ extra_jacket.id }}',
        title: '{{ extra_jacket.title | escape }}',
        price: '{{ extra_jacket.price | money }}',
        description: '{{ extra_jacket.description | strip_html | escape }}',
        image: '{{ extra_jacket.featured_image | img_url: 'medium' | default: 'https://via.placeholder.com/120x140' }}',
        variants: [
          {% for variant in extra_jacket.variants %}
            {
              id: '{{ variant.id }}',
              title: '{{ variant.title | escape }}',
              size: '{{ variant.option1 | escape }}',
              color: '{{ variant.option2 | escape }}'
            }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      };
    {% endif %}

    document.addEventListener('DOMContentLoaded', () => {
      const popup = document.getElementById('product-popup');
      const popupImage = document.querySelector('.popup-product-image');
      const popupTitle = document.querySelector('.popup-product-title');
      const popupPrice = document.querySelector('.popup-product-price');
      const popupDescription = document.querySelector('.popup-product-description');
      const popupColorOptions = document.querySelector('.popup-color-options');
      const popupSizeOptions = document.querySelector('.popup-size-options');
      const popupSizeDropdown = document.querySelector('.popup-size-dropdown-content');
      const popupSizeTextChoose = document.querySelector('.popup-size-text-choose');
      const body = document.body;

      let selectedVariantId = null;
      let selectedSize = null;
      let selectedColor = null;
      let currentProductHandle = null;

      // Open popup on product image click
      document.querySelectorAll('[data-action="open-popup"]').forEach(image => {
        image.addEventListener('click', () => {
          currentProductHandle = image.closest('.grid-item').dataset.productHandle;
          const product = products[currentProductHandle];
          if (!product) {
            console.error('Product not found:', currentProductHandle);
            alert('Product data unavailable. Please try again.');
            return;
          }

          // Populate popup
          popupImage.src = product.image;
          popupImage.alt = product.title;
          popupTitle.textContent = product.title;
          popupPrice.textContent = product.price;
          popupDescription.textContent = product.description;

          // Color options
          const uniqueColors = [...new Set(product.variants.map(v => v.color))];
          popupColorOptions.innerHTML = uniqueColors.map((color, index) => `
            <div class="color-section">
              <div class="color-option ${color.toLowerCase()}">
                <div class="color-rectangle ${index === 1 ? 'second' : ''} ${color.toLowerCase()}" data-color="${color}"></div>
                <span class="color-text ${color.toLowerCase()}">${color}</span>
              </div>
            </div>
          `).join('');

          // Size options
          const uniqueSizes = [...new Set(product.variants.map(v => v.size))];
          popupSizeDropdown.innerHTML = uniqueSizes.map(size => `
            <div class="popup-size-option">${size}</div>
          `).join('');

          // Reset selections
          selectedVariantId = null;
          selectedColor = null;
          selectedSize = null;
          popupSizeTextChoose.textContent = '{{ section.settings.size_placeholder }}';

          popup.style.display = 'flex';
          body.classList.add('popup-active');
        });
      });

      // Color selection
      popupColorOptions.addEventListener('click', (e) => {
        const colorSection = e.target.closest('.color-section');
        if (!colorSection) return;
        popupColorOptions.querySelectorAll('.color-section').forEach(s => s.classList.remove('selected'));
        colorSection.classList.add('selected');
        selectedColor = colorSection.querySelector('.color-rectangle').dataset.color;

        if (selectedSize) {
          const variant = products[currentProductHandle].variants.find(v => v.color === selectedColor && v.size === selectedSize);
          selectedVariantId = variant ? variant.id : null;
        }
      });

      // Size dropdown toggle
      popupSizeOptions.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        popupSizeDropdown.style.display = popupSizeDropdown.style.display === 'block' ? 'none' : 'block';
      });

      // Size selection
      popupSizeDropdown.addEventListener('click', (e) => {
        const sizeOption = e.target.closest('.popup-size-option');
        if (!sizeOption) return;
        selectedSize = sizeOption.textContent;
        popupSizeTextChoose.textContent = selectedSize;
        popupSizeDropdown.style.display = 'none';

        if (selectedColor) {
          const variant = products[currentProductHandle].variants.find(v => v.color === selectedColor && v.size === selectedSize);
          selectedVariantId = variant ? variant.id : null;
        }
      });

      // Close popup
      document.querySelector('[data-action="close-popup"]').addEventListener('click', () => {
        popup.style.display = 'none';
        popupSizeDropdown.style.display = 'none';
        body.classList.remove('popup-active');
      });

      // Add to cart
      document.querySelector('.popup-add-to-cart-button').addEventListener('click', () => {
        if (!selectedVariantId || !selectedColor || !selectedSize) {
          alert('Please select a color and size');
          return;
        }

        const itemsToAdd = [{ id: selectedVariantId, quantity: 1 }];

        // Add Soft Winter Jacket (handle: dark-winter-jacket) for Black/Medium variants
        if (selectedColor === 'Black' && selectedSize === 'Medium') {
          const extraJacket = products['dark-winter-jacket'];
          if (extraJacket) {
            const blackMediumVariant = extraJacket.variants.find(v => v.color === 'Black' && v.size === 'Medium');
            if (blackMediumVariant) {
              itemsToAdd.push({ id: blackMediumVariant.id, quantity: 1 });
            } else {
              console.warn('Soft Winter Jacket (dark-winter-jacket) Black/Medium variant not found');
              alert('Warning: Soft Winter Jacket (Black/Medium) unavailable and will not be added.');
            }
          } else {
            console.warn('Soft Winter Jacket (dark-winter-jacket) product not found');
            alert('Warning: Soft Winter Jacket unavailable and will not be added.');
          }
        }

        fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ items: itemsToAdd })
        })
        .then(res => res.ok ? res.json() : Promise.reject('Add to cart failed'))
        .then(() => {
          popup.style.display = 'none';
          body.classList.remove('popup-active');
          window.location.href = '/cart'; // Redirect to Shopify's cart page
        })
        .catch(err => {
          console.error(err);
          alert('Error adding to cart. Please try again.');
        });
      });
    });
